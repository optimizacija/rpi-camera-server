// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @default(autoincrement()) @id
  email     String  @unique
  passhash  String
  role      Role
}

model Role {
  id                    Int      @default(autoincrement()) @id
  name                  String
  canAccessVideoStream         Boolean  @default(false)
  canAccessControlPanel Boolean  @default(false)
}
